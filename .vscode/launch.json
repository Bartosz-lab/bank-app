    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Run",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/bank_app",
            "program": "./manage.py",
            "args": [
                "runserver",
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Django: Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bank_app/manage.py",
            "args": [
                "test",
            ],
            "django": true
        },
        {
            "name": "Test File",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bank_app/manage.py",
            "args": [
                "test",
                "--noinput",
                "${relativeFileDirname}"
            ],
            "django": true
        }
    ]
}